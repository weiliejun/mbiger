    <!-- 申明不同环境调用不同数据库连接参数 -->
    <profiles>
        <!-- 开发/测试环境，默认激活 -->
        <profile>
            <id>local</id>
            <properties>
                <!-- 数据库配置 -->
                <spring.datasource.url>
                    <![CDATA[jdbc:mysql://127.0.0.1:3306/mbiger?useSSL=false&useTimezone=true&serverTimezone=GMT%2B8]]></spring.datasource.url>
                <spring.datasource.username>mbiger</spring.datasource.username>
                <spring.datasource.password>mbiger</spring.datasource.password>

                <!-- redis配置 -->
                <redis.host>127.0.0.1</redis.host>
                <redis.port>6379</redis.port>
                <redis.password>junde</redis.password>
            </properties>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
        </profile>
