                <redis.port>6379</redis.port>
                <redis.password>junde</redis.password>
            </properties>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
        </profile>
        <!-- 开发/测试环境，默认激活 -->
        <profile>
            <id>product</id>
            <properties>
                <!-- 数据库配置 -->
                <spring.datasource.url>
                    <![CDATA[jdbc:mysql://127.0.0.1:3306/mbiger?useSSL=false&useTimezone=true&serverTimezone=GMT%2B8]]></spring.datasource.url>
